{
    "parser": "babel-eslint",
    "extends": ["airbnb", "prettier", "prettier/react"],
    "plugins": ["react", "prettier"],
    "rules": {
        "prettier/prettier": "error",
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "jsx-a11y/anchor-is-valid": [
            "error",
            {
                "components": ["Link"],
                "specialLink": ["to"]
            }
        ],
        "react/prop-types": 0,
        "jsx-a11y/label-has-for": [
            2,
            {
                "required": {
                    "some": ["nesting", "id"]
                }
            }
        ]
    },
    "env": {
        "browser": true
    }
}
